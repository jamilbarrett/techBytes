

  <!-- Form Section: Create a New Post -->
  <div class="max-w-md mx-auto my-20 bg-white border rounded-lg shadow p-6">
    <h2 class="text-center text-xl font-bold mb-4">Make a Byte</h2>
    <form action="/dashboard" method="POST" class="flex flex-col space-y-4">
      <!-- Title Field -->
      <label for="title" class="font-semibold" value="{{this.title}}">Title</label>
      <input type="text" id="title" name="title" required class="w-full p-2 border rounded">

      <!-- Content Field -->
      <label for="content" class="font-semibold">Content</label>
      <textarea id="content" name="content" required rows="4" placeholder="What's cooking?"
        class="resize-none border rounded-md p-2 focus:outline-none focus:ring focus:border-blue-500">{{this.entry}}</textarea>

      <!-- Submit Button -->
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">Share a
        Byte</button>
    </form>



  </div>