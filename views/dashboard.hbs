<!-- Dashboard Section: Displaying Existing Posts -->
<h2>Your Posts</h2>
<ul>
  {{#each dashboard.articles}}
  <li>
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <a href="/post/{{this.id}}">Edit/Delete</a>
  </li>
  {{/each}}
</ul>

<!-- Form Section: Create a New Post -->
<h2 class="text-center">Create a New Post</h2>
<form action="/post" method="POST" class="max-w-sm mx-auto border rounded p-4">
  <div class="flex flex-col space-y-4">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required class="w-full p-2 border rounded">

    <label for="content">Content</label>
    <textarea id="content" name="content" required class="w-full h-32 p-2 border rounded"></textarea>

    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create Article</button>
  </div>
</form>
