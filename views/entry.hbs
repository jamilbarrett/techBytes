<div class="container mx-auto max-w-2xl p-8">
    <h1 class="text-4xl lg:text-6xl font-bold text-center mt-8 mb-12">How are we feeling Today?</h1>


    <form class="flex flex-col m-4 p-4" action="/entry" method="POST">
        <label for="title" class="text-2xl lg:text-4xl font-semibold my-4 lg:mt-8">Title:</label>
        <input class="uppercase border border-gray-300 rounded-md py-2 px-3 mb-4" type="text" id="title" name="title"
            value="{{this.title}}">
        <label for="entry" class="text-2xl lg:text-4xl font-semibold my-4 lg:mt-8">
            Entry:</label>
        <textarea id="entry" name="entry"
            class="border border-gray-300 rounded-md py-2 px-3 h-40 resize-none">{{this.entry}}</textarea>

        <!-- Buttons moved to the right and left -->
        <div class="flex justify-between mt-4"> <!-- Changed justify-between to justify-start -->
             <button class="my-3 rounded-full border-solid border-2 border-white py-4 px-8 text-white font-extrabold text-sm ">Save Entry</button>
        </div>
    </form>
</div>